server {
        listen 80;

        server_name mrk.robkj.tech;
        add_header X-Served-By $hostname;

        location / {
                include proxy_params;
                proxy_pass http://127.0.0.1:5000;
        }

        location /static {
                include proxy_params;
                proxy_pass http://127.0.0.1:5000;
        }

        location /api/mrk/ {
                include proxy_params;
                proxy_pass http://127.0.0.1:5001;
        }
}
